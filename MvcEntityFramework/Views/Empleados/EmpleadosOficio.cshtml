@model List<Empleado>
@{
    List<string> Oficios = ViewBag.Oficios as List<string>;
}
<form method="post" class="row">
    <select class="form-control col-2" name="oficio">
        @foreach (string oficio in Oficios)
        {
            if (Model != null && oficio == Model.First().Oficio)
            {
                <option value="@oficio" selected>@oficio</option>

            }
            else
            {
                <option value="@oficio">@oficio</option>

            }
        }
    </select>
    <button type="submit" class="btn btn-primary ml-1 col-2">Cargar empleados con este oficio</button>
</form>
@if (Model != null)
{
    @Html.ActionLink("Subir Salarios", "SubirSalarios", "Empleados", new { oficio = Model.First().Oficio }
, new { @class = "btn btn-success mt-1" })
    <table class="table table-hover mt-1">
        <thead class="thead-dark">
            <tr>
                <th>IDEMPLEADO</th>
                <th>APELLIDO</th>
                <th>OFICIO</th>
                <th>SALARIO</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Empleado emp in Model)
            {
                <tr>
                    <td scope="row">@emp.NumEmp</td>
                    <td>@emp.Apellido</td>
                    <td>@emp.Oficio</td>
                    <td>@emp.Salario</td>
                </tr>
            }
        </tbody>
    </table>

}